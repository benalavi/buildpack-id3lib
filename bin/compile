#!/usr/bin/env bash

set -o pipefail

BIN_DIR=$(dirname $0)
ROOT_DIR=`cd $(dirname $0); cd ..; pwd`
BUILD_DIR=$1
CACHE_DIR=$2
TARGET_DIR="$BUILD_DIR/local/id3lib-3.8.3"

mkdir -p $BUILD_DIR $BUILD_DIR/.profile.d $CACHE_DIR $TARGET_DIR

echo "-----> Using id3lib buildpack"

cd $TARGET_DIR
curl --fail --retry 3 --retry-delay 1 --connect-timeout 3 --max-time 20 https://s3.amazonaws.com/buildpack-id3lib/id3lib-3.8.3.tgz -s -o - | tar zxf -

echo "-----> Building runtime environment"
cat <<EOF > $BUILD_DIR/.profile.d/id3lib.sh
export LD_LIBRARY_PATH="\$LD_LIBRARY_PATH:/app/local/id3lib-3.8.3/lib"
export LIBRARY_PATH="\$LIBRARY_PATH:/app/local/id3lib-3.8.3/lib"
export CPPPATH="\$CPPPATH:/app/local/id3lib-3.8.3/include"
export CPATH="\$CPATH:/app/local/id3lib-3.8.3/include"
EOF
